{
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "noImplicitAny": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./lib/esm",
    "incremental": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src"]
}
